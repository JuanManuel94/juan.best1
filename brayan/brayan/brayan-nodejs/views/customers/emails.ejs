<%- include('../resources/includes/head') %>

    <body>
        <div id="page-container" class="fade page-sidebar-fixed page-header-fixed">
            <%- include('../resources/includes/header') %>
                <%- include('../resources/includes/sidebar') %>
                    <div id="content" class="content">
                        <ol class="breadcrumb float-xl-right">
                            <li class="breadcrumb-item"><a href="/dashboard">Inicio</a></li>
                            <li class="breadcrumb-item">Clientes</li>
                            <li class="breadcrumb-item active">Correos</li>
                        </ol>
                        <h1 class="page-header">Correos <small>historial de emails enviados</small></h1>
                        <div class="panel panel-inverse">
                            <div class="panel-heading">
                                <h4 class="panel-title">Correos Enviados</h4>
                            </div>
                            <div class="panel-body">
                                <table id="tableEmails" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>DESTINATARIO</th>
                                            <th>ASUNTO</th>
                                            <th>PLANTILLA</th>
                                            <th>ESTADO</th>
                                            <th>FECHA</th>
                                            <th>ACCIONES</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
        </div>
        <%- include('../resources/includes/footer') %>
            <script>
                $(document).ready(function () {
                    $('#tableEmails').DataTable({
                        ajax: { url: '/customers/emails/list', dataSrc: 'data' },
                        columns: [
                            { data: 'id' }, { data: 'recipient_email' }, { data: 'subject', defaultContent: '-' },
                            { data: 'template_used', defaultContent: '-' },
                            {
                                data: 'status', render: d => {
                                    const colors = { sent: 'success', failed: 'danger', pending: 'warning' };
                                    return `<span class="badge badge-${colors[d] || 'secondary'}">${d}</span>`;
                                }
                            },
                            { data: 'sent_at', defaultContent: '-' },
                            { data: null, render: d => `<button class="btn btn-info btn-xs"><i class="fa fa-eye"></i></button>` }
                        ],
                        language: { url: '/public/plugins/datatables/Spanish.json' }
                    });
                });
            </script>