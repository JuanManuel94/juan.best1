<%- include('../resources/includes/head') %>

    <body>
        <div id="page-container" class="fade page-sidebar-fixed page-header-fixed">
            <%- include('../resources/includes/header') %>
                <%- include('../resources/includes/sidebar') %>
                    <div id="content" class="content">
                        <ol class="breadcrumb float-xl-right">
                            <li class="breadcrumb-item"><a href="/dashboard">Inicio</a></li>
                            <li class="breadcrumb-item">Servicios</li>
                            <li class="breadcrumb-item active">Voz</li>
                        </ol>
                        <h1 class="page-header">Planes de Voz <small>telefonía VoIP</small></h1>
                        <div class="panel panel-inverse">
                            <div class="panel-heading">
                                <h4 class="panel-title">Planes de Voz</h4>
                                <div class="panel-heading-btn">
                                    <button class="btn btn-primary btn-sm" data-toggle="modal"
                                        data-target="#modalVoice">
                                        <i class="fa fa-plus"></i> Nuevo Plan
                                    </button>
                                </div>
                            </div>
                            <div class="panel-body">
                                <div class="alert alert-info">
                                    <i class="fa fa-info-circle"></i> Módulo de telefonía VoIP. Configure planes de
                                    minutos.
                                </div>
                                <table id="tableVoice" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>NOMBRE</th>
                                            <th>MINUTOS</th>
                                            <th>PRECIO</th>
                                            <th>ESTADO</th>
                                            <th>ACCIONES</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
        </div>
        <%- include('../resources/includes/footer') %>
            <script>
                $(document).ready(function () {
                    $('#tableVoice').DataTable({
                        data: [
                            { id: 1, name: 'Plan Básico', minutes: 100, price: 10.00, state: 1 },
                            { id: 2, name: 'Plan Estándar', minutes: 300, price: 25.00, state: 1 },
                            { id: 3, name: 'Plan Premium', minutes: 'Ilimitado', price: 50.00, state: 1 }
                        ],
                        columns: [
                            { data: 'id' }, { data: 'name' }, { data: 'minutes' }, { data: 'price', render: d => `S/ ${d}` },
                            { data: 'state', render: d => d ? '<span class="badge badge-success">Activo</span>' : '<span class="badge badge-danger">Inactivo</span>' },
                            {
                                data: null, render: d => `
                        <button class="btn btn-info btn-xs"><i class="fa fa-edit"></i></button>
                        <button class="btn btn-danger btn-xs"><i class="fa fa-trash"></i></button>
                    `}
                        ],
                        language: { url: '/public/plugins/datatables/Spanish.json' }
                    });
                });
            </script>