<%- include('../resources/includes/head') %>

    <body>
        <div id="page-container" class="fade page-sidebar-fixed page-header-fixed">
            <%- include('../resources/includes/header') %>
                <%- include('../resources/includes/sidebar') %>
                    <div id="content" class="content">
                        <ol class="breadcrumb float-xl-right">
                            <li class="breadcrumb-item"><a href="/dashboard">Inicio</a></li>
                            <li class="breadcrumb-item">Servicios</li>
                            <li class="breadcrumb-item active">Personalizado</li>
                        </ol>
                        <h1 class="page-header">Servicios Personalizados <small>servicios adicionales</small></h1>
                        <div class="panel panel-inverse">
                            <div class="panel-heading">
                                <h4 class="panel-title">Servicios</h4>
                                <div class="panel-heading-btn">
                                    <button class="btn btn-primary btn-sm" data-toggle="modal"
                                        data-target="#modalCustom">
                                        <i class="fa fa-plus"></i> Nuevo Servicio
                                    </button>
                                </div>
                            </div>
                            <div class="panel-body">
                                <table id="tableCustom" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>NOMBRE</th>
                                            <th>DESCRIPCIÓN</th>
                                            <th>PRECIO</th>
                                            <th>TIPO</th>
                                            <th>ESTADO</th>
                                            <th>ACCIONES</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
        </div>
        <%- include('../resources/includes/footer') %>
            <script>
                $(document).ready(function () {
                    $('#tableCustom').DataTable({
                        data: [
                            { id: 1, name: 'IP Fija', description: 'Asignación de IP pública fija', price: 15.00, type: 'monthly', state: 1 },
                            { id: 2, name: 'Soporte Premium', description: 'Soporte prioritario 24/7', price: 20.00, type: 'monthly', state: 1 },
                            { id: 3, name: 'Instalación Express', description: 'Instalación en 24 horas', price: 30.00, type: 'one_time', state: 1 }
                        ],
                        columns: [
                            { data: 'id' }, { data: 'name' }, { data: 'description' }, { data: 'price', render: d => `S/ ${d}` },
                            { data: 'type', render: d => d === 'monthly' ? 'Mensual' : 'Único' },
                            { data: 'state', render: d => d ? '<span class="badge badge-success">Activo</span>' : '<span class="badge badge-danger">Inactivo</span>' },
                            {
                                data: null, render: d => `
                        <button class="btn btn-info btn-xs"><i class="fa fa-edit"></i></button>
                        <button class="btn btn-danger btn-xs"><i class="fa fa-trash"></i></button>
                    `}
                        ],
                        language: { url: '/public/plugins/datatables/Spanish.json' }
                    });
                });
            </script>