<%- include('../resources/includes/head') %>

    <body>
        <div id="page-container" class="fade page-sidebar-fixed page-header-fixed">
            <%- include('../resources/includes/header') %>
                <%- include('../resources/includes/sidebar') %>
                    <div id="content" class="content">
                        <ol class="breadcrumb float-xl-right">
                            <li class="breadcrumb-item"><a href="/dashboard">Inicio</a></li>
                            <li class="breadcrumb-item">Mensajería</li>
                            <li class="breadcrumb-item active">WhatsApp</li>
                        </ol>
                        <h1 class="page-header">Chat WhatsApp <small>mensajería instantánea</small></h1>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="panel panel-inverse">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">Conversaciones</h4>
                                    </div>
                                    <div class="panel-body p-0" style="height:500px;overflow-y:auto">
                                        <div class="list-group list-group-flush" id="chatList">
                                            <a href="#" class="list-group-item list-group-item-action"
                                                onclick="selectChat(1)">
                                                <div class="d-flex w-100 justify-content-between">
                                                    <h6 class="mb-1">Juan Pérez</h6>
                                                    <small>10:30</small>
                                                </div>
                                                <small class="text-muted">Hola, tengo problemas...</small>
                                            </a>
                                            <a href="#" class="list-group-item list-group-item-action"
                                                onclick="selectChat(2)">
                                                <div class="d-flex w-100 justify-content-between">
                                                    <h6 class="mb-1">María López</h6>
                                                    <small>09:15</small>
                                                </div>
                                                <small class="text-muted">¿Cuándo vence mi pago?</small>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="panel panel-inverse">
                                    <div class="panel-heading">
                                        <h4 class="panel-title" id="chatTitle">Seleccione una conversación</h4>
                                    </div>
                                    <div class="panel-body" style="height:400px;overflow-y:auto;background:#f5f5f5"
                                        id="chatMessages">
                                        <p class="text-center text-muted">Seleccione una conversación para ver los
                                            mensajes</p>
                                    </div>
                                    <div class="panel-footer">
                                        <div class="input-group">
                                            <input type="text" class="form-control" id="messageInput"
                                                placeholder="Escribe un mensaje...">
                                            <div class="input-group-append">
                                                <button class="btn btn-success" onclick="sendMessage()"><i
                                                        class="fa fa-paper-plane"></i></button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
        </div>
        <%- include('../resources/includes/footer') %>
            <script>
                let currentChat = null;
                function selectChat(id) {
                    currentChat = id;
                    $('#chatTitle').text(id === 1 ? 'Juan Pérez' : 'María López');
                    $('#chatMessages').html(`
                <div class="mb-2"><span class="badge badge-light p-2">Hola, tengo problemas con mi internet</span></div>
                <div class="mb-2 text-right"><span class="badge badge-success p-2">Hola! ¿Cuál es el problema?</span></div>
            `);
                }
                function sendMessage() {
                    const msg = $('#messageInput').val();
                    if (!msg || !currentChat) return;
                    $('#chatMessages').append(`<div class="mb-2 text-right"><span class="badge badge-success p-2">${msg}</span></div>`);
                    $('#messageInput').val('');
                    toastr.info('Mensaje enviado (simulado)');
                }
            </script>