<%- include('../resources/includes/head') %>

    <body>
        <div id="page-container" class="fade page-sidebar-fixed page-header-fixed">
            <%- include('../resources/includes/header') %>
                <%- include('../resources/includes/sidebar') %>
                    <div id="content" class="content">
                        <ol class="breadcrumb float-xl-right">
                            <li class="breadcrumb-item"><a href="/dashboard">Inicio</a></li>
                            <li class="breadcrumb-item">Mensajer√≠a</li>
                            <li class="breadcrumb-item active">Mensajes Recibidos</li>
                        </ol>
                        <h1 class="page-header">Mensajes Recibidos</h1>
                        <div class="panel panel-inverse">
                            <div class="panel-heading">
                                <h4 class="panel-title">Historial de Mensajes Recibidos</h4>
                            </div>
                            <div class="panel-body">
                                <table id="tableReceived" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>REMITENTE</th>
                                            <th>CLIENTE</th>
                                            <th>MENSAJE</th>
                                            <th>TIPO</th>
                                            <th>FECHA</th>
                                            <th>ACCIONES</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
        </div>
        <%- include('../resources/includes/footer') %>
            <script>
                $(document).ready(function () {
                    $('#tableReceived').DataTable({
                        ajax: { url: '/messaging/received/list', dataSrc: 'data' },
                        columns: [
                            { data: 'id' }, { data: 'phone_number' }, { data: null, render: d => d.names ? `${d.names} ${d.surnames}` : '-' },
                            { data: 'message_text' }, { data: 'message_type' }, { data: 'created_at' },
                            { data: null, render: d => `<button class="btn btn-success btn-xs" onclick="reply('${d.phone_number}')"><i class="fa fa-reply"></i></button>` }
                        ],
                        language: { url: '/public/plugins/datatables/Spanish.json' }
                    });
                });
                function reply(phone) { toastr.info('Respondiendo a: ' + phone); }
            </script>