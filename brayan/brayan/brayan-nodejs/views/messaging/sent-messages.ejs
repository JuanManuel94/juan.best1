<%- include('../resources/includes/head') %>

    <body>
        <div id="page-container" class="fade page-sidebar-fixed page-header-fixed">
            <%- include('../resources/includes/header') %>
                <%- include('../resources/includes/sidebar') %>
                    <div id="content" class="content">
                        <ol class="breadcrumb float-xl-right">
                            <li class="breadcrumb-item"><a href="/dashboard">Inicio</a></li>
                            <li class="breadcrumb-item">Mensajer√≠a</li>
                            <li class="breadcrumb-item active">Mensajes Enviados</li>
                        </ol>
                        <h1 class="page-header">Mensajes Enviados</h1>
                        <div class="panel panel-inverse">
                            <div class="panel-heading">
                                <h4 class="panel-title">Historial de Mensajes Enviados</h4>
                            </div>
                            <div class="panel-body">
                                <table id="tableSent" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>DESTINATARIO</th>
                                            <th>MENSAJE</th>
                                            <th>TIPO</th>
                                            <th>ESTADO</th>
                                            <th>FECHA</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
        </div>
        <%- include('../resources/includes/footer') %>
            <script>
                $(document).ready(function () {
                    $('#tableSent').DataTable({
                        ajax: { url: '/messaging/sent/list', dataSrc: 'data' },
                        columns: [
                            { data: 'id' }, { data: 'phone_number' }, { data: 'message_text' },
                            { data: 'message_type' }, {
                                data: 'status', render: d => {
                                    const c = { sent: 'success', delivered: 'info', read: 'primary', failed: 'danger', pending: 'warning' };
                                    return `<span class="badge badge-${c[d] || 'secondary'}">${d}</span>`;
                                }
                            }, { data: 'sent_at', defaultContent: '-' }
                        ],
                        language: { url: '/public/plugins/datatables/Spanish.json' }
                    });
                });
            </script>