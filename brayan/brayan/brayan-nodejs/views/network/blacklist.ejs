<%- include('../resources/includes/head') %>

    <body>
        <div id="page-container" class="fade page-sidebar-fixed page-header-fixed">
            <%- include('../resources/includes/header') %>
                <%- include('../resources/includes/sidebar') %>
                    <div id="content" class="content">
                        <ol class="breadcrumb float-xl-right">
                            <li class="breadcrumb-item"><a href="/dashboard">Inicio</a></li>
                            <li class="breadcrumb-item">Gestión de Red</li>
                            <li class="breadcrumb-item active">Monitor BlackList</li>
                        </ol>
                        <h1 class="page-header">Monitor BlackList <small>IPs en listas negras</small></h1>
                        <div class="panel panel-inverse">
                            <div class="panel-heading">
                                <h4 class="panel-title">IPs Detectadas en BlackList</h4>
                                <div class="panel-heading-btn">
                                    <button class="btn btn-success btn-sm" onclick="checkBlacklist()">
                                        <i class="fa fa-sync"></i> Verificar
                                    </button>
                                </div>
                            </div>
                            <div class="panel-body">
                                <div class="alert alert-info">
                                    <i class="fa fa-info-circle"></i> Este módulo verifica si las IPs de sus clientes
                                    están en listas negras internacionales.
                                </div>
                                <table id="tableBlacklist" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>IP</th>
                                            <th>CLIENTE</th>
                                            <th>LISTA</th>
                                            <th>RAZÓN</th>
                                            <th>FECHA</th>
                                            <th>ACCIONES</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
        </div>
        <%- include('../resources/includes/footer') %>
            <script>
                $(document).ready(function () {
                    $('#tableBlacklist').DataTable({
                        data: [],
                        columns: [
                            { data: 'id' }, { data: 'ip' }, { data: 'client' }, { data: 'list' }, { data: 'reason' }, { data: 'date' },
                            { data: null, render: d => '<button class="btn btn-info btn-xs"><i class="fa fa-eye"></i></button>' }
                        ],
                        language: { url: '/public/plugins/datatables/Spanish.json' }
                    });
                });
                function checkBlacklist() {
                    toastr.info('Verificando blacklists... (simulado)');
                    setTimeout(() => toastr.success('Sin IPs en blacklist'), 2000);
                }
            </script>