<%- include('../resources/includes/head') %>

    <body>
        <div id="page-container" class="fade page-sidebar-fixed page-header-fixed">
            <%- include('../resources/includes/header') %>
                <%- include('../resources/includes/sidebar') %>
                    <div id="content" class="content">
                        <ol class="breadcrumb float-xl-right">
                            <li class="breadcrumb-item"><a href="/dashboard">Inicio</a></li>
                            <li class="breadcrumb-item">Fichas Hotspot</li>
                            <li class="breadcrumb-item active">Plantillas</li>
                        </ol>
                        <h1 class="page-header">Plantillas Hotspot <small>diseño de portal cautivo</small></h1>
                        <div class="panel panel-inverse">
                            <div class="panel-heading">
                                <h4 class="panel-title">Plantillas</h4>
                                <div class="panel-heading-btn">
                                    <button class="btn btn-primary btn-sm" data-toggle="modal"
                                        data-target="#modalTemplate">
                                        <i class="fa fa-plus"></i> Nueva Plantilla
                                    </button>
                                </div>
                            </div>
                            <div class="panel-body">
                                <table id="tableTemplates" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>NOMBRE</th>
                                            <th>DESCRIPCIÓN</th>
                                            <th>POR DEFECTO</th>
                                            <th>ACCIONES</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
        </div>
        <%- include('../resources/includes/footer') %>
            <script>
                $(document).ready(function () {
                    $('#tableTemplates').DataTable({
                        ajax: { url: '/hotspot/templates/list', dataSrc: 'data' },
                        columns: [
                            { data: 'id' }, { data: 'name' }, { data: 'description', defaultContent: '-' },
                            { data: 'is_default', render: d => d ? '<span class="badge badge-success">Sí</span>' : '-' },
                            {
                                data: null, render: d => `
                        <button class="btn btn-info btn-xs"><i class="fa fa-eye"></i></button>
                        <button class="btn btn-primary btn-xs"><i class="fa fa-edit"></i></button>
                        <button class="btn btn-danger btn-xs"><i class="fa fa-trash"></i></button>
                    `}
                        ],
                        language: { url: '/public/plugins/datatables/Spanish.json' }
                    });
                });
            </script>