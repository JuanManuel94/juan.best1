<%- include('../resources/includes/head') %>

    <body>
        <div id="page-container" class="fade page-sidebar-fixed page-header-fixed">
            <%- include('../resources/includes/header') %>
                <%- include('../resources/includes/sidebar') %>
                    <div id="content" class="content">
                        <ol class="breadcrumb float-xl-right">
                            <li class="breadcrumb-item"><a href="/dashboard">Inicio</a></li>
                            <li class="breadcrumb-item">Fichas Hotspot</li>
                            <li class="breadcrumb-item active">Routers</li>
                        </ol>
                        <h1 class="page-header">Routers Hotspot <small>configuración</small></h1>
                        <div class="panel panel-inverse">
                            <div class="panel-heading">
                                <h4 class="panel-title">Routers con Hotspot</h4>
                            </div>
                            <div class="panel-body">
                                <div class="alert alert-info">
                                    <i class="fa fa-info-circle"></i> Configure los routers que tendrán servicio de
                                    Hotspot habilitado.
                                </div>
                                <table id="tableHotspotRouters" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>NOMBRE</th>
                                            <th>IP</th>
                                            <th>HOTSPOT</th>
                                            <th>USUARIOS</th>
                                            <th>ACCIONES</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
        </div>
        <%- include('../resources/includes/footer') %>
            <script>
                $(document).ready(function () {
                    $('#tableHotspotRouters').DataTable({
                        data: [
                            { id: 1, name: 'Router Principal', ip: '192.168.1.1', hotspot: true, users: 25 },
                            { id: 2, name: 'Router Secundario', ip: '192.168.2.1', hotspot: false, users: 0 }
                        ],
                        columns: [
                            { data: 'id' }, { data: 'name' }, { data: 'ip' },
                            { data: 'hotspot', render: d => d ? '<i class="fa fa-check text-success"></i>' : '<i class="fa fa-times text-danger"></i>' },
                            { data: 'users' },
                            { data: null, render: d => `<button class="btn btn-info btn-xs"><i class="fa fa-cog"></i> Configurar</button>` }
                        ],
                        language: { url: '/public/plugins/datatables/Spanish.json' }
                    });
                });
            </script>